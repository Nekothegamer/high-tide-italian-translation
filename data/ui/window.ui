<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="HighTideWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="width-request">360</property>
    <property name="height-request">400</property>
    <property name="title">High Tide</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 700px</condition>
        <setter object="split_view" property="collapsed">true</setter>
        <setter object="sidebar_show_button" property="visible">true</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 800px</condition>
        <setter object="split_view" property="collapsed">true</setter>
        <!-- <setter object="playbar_box" property="orientation">vertical</setter> -->
        <!-- <setter object="playbar_box" property="homogeneous">true</setter> -->
        <setter object="playbar_controls_box" property="halign">center</setter>
        <setter object="sidebar_show_button" property="visible">true</setter>
        <setter object="big_progress_bar_box" property="visible">false</setter>
        <setter object="small_progress_bar" property="visible">true</setter>
        <setter object="_more_functions_box" property="visible">false</setter>
        <setter object="_song_box" property="width-request">-1</setter>
        <setter object="skip_backward_button" property="visible">false</setter>
        <setter object="shuffle_button" property="visible">false</setter>
        <setter object="repeat_button" property="visible">false</setter>
        <setter object="play_button" property="css-classes">flat</setter>
        <setter object="playbar_controls_box" property="halign">end</setter>
        <setter object="playbar_controls_box" property="margin-end">12</setter>
        <setter object="playbar_controls_box" property="margin-top">6</setter>
        <setter object="playing_track_image" property="pixel-size">50</setter>
        <setter object="image_overlay" property="margin-start">6</setter>
        <setter object="_center_control_box" property="width-request">-1</setter>
      </object>
    </child>
    <property name="content">
      <object class="GtkStack" id="main_view_stack">
          <!-- <property name="visible-child-name">normal_view</property> -->
          <property name="transition-type">slide-up-down</property>
          <child>
            <object class="GtkStackPage">
              <property name="name">normal_view</property>
              <property name="child">
                <object class="GtkBox" id="normal_view_box">
                  <property name="orientation">vertical</property>
                  <property name="vexpand">true</property>
                  <child>

                  <object class="AdwOverlaySplitView" id="split_view">
                    <property name="vexpand">true</property>
                    <property name="sidebar">
