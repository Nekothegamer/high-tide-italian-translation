<interface>
  <!-- interface-name top hits.ui -->
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="HTTopHitWidget" parent="GtkBox">
    <property name="margin-bottom">12</property>
    <property name="margin-end">12</property>
    <property name="margin-start">12</property>
    <property name="margin-top">12</property>
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <property name="valign">start</property>
    <child>
      <object class="GtkLabel">
        <style>
                                          <class name="title-3"/>
                                        </style>
        <property name="label">Top Hit</property>
        <property name="xalign">0.0</property>
      </object>
    </child>
    <child>
      <object class="GtkStack">
        <property name="valign">start</property>
        <child>
          <object class="GtkStackPage">
            <property name="child">
              <object class="AdwBin">
                <style>
                                          <class name="cart"/>
                              <class name="activatable"/>
                                        </style>
                <property name="valign">start</property>
                <child>
                  <object class="GtkBox">
                    <property name="margin-bottom">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-top">12</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">12</property>
                        <child>
                          <object class="AdwAvatar" id="artist_avatar">
                            <property name="size">80</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">6</property>
                            <child>
                              <object class="GtkLabel" id="artist_label">
                                <style>
                                          <class name="title-1"/>
                                        </style>
                                <property name="ellipsize">end</property>
                                <property name="vexpand">True</property>
                                <property name="xalign">0.0</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Artist</property>
                                <property name="vexpand">True</property>
                                <property name="xalign">0.0</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">12</property>
                        <child>
                          <object class="GtkButton" id="play_button">
                            <style>
                                          <class name="pill"/>
                              <class name="suggested-action"/>
                                        </style>
                            <property name="hexpand">True</property>
                            <property name="icon-name">media-playback-start-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="shuffle_button">
                            <style>
                                          <class name="pill"/>
                                        </style>
                            <property name="hexpand">True</property>
                            <property name="icon-name">media-playlist-shuffle-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="name">artist</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
